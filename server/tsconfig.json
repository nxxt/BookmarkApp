{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["ES6"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
